<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="false">
    <display-name>Сервлет FrontControllerServlet</display-name>

    <servlet>
        <servlet-name>FrontControllerServlet</servlet-name>
        <servlet-class>by.it.akhmelev.project.java.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontControllerServlet</servlet-name>
        <url-pattern>/do</url-pattern>
        <url-pattern>.</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>EncodingPage</filter-name>
        <filter-class>by.it.akhmelev.project.java.filters.EncodingPage</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingPage</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- пул соединений -->
    <description>MySQL my_sql_akhmelev</description>
    <resource-ref>
        <description>my_sql_akhmelev</description>
        <res-ref-name>jdbc/my_sql_akhmelev</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <listener>
        <listener-class>by.it.akhmelev.project.java.filters.SessionAttributeListener</listener-class>
    </listener>

</web-app>